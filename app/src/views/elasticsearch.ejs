          <main>
            <h1>SEARCH BOX</h1>

            <div class="SearchBox">
              <input type="text" class="SearchBox-input" placeholder="Tìm kiếm thông tin" />

              <button class="SearchBox-button">
                <i class="SearchBox-icon material-icons">search</i>
              </button>
            </div>
          </main>
        </div>
        <div class="table-user mt-3">
          <h3>Table user:</h3>
          <table class="table table-hover table-bordered">
            <thead>
              <tr>
                <th scope="col">#</th>
                <th scope="col" class="w-50">Post</th>
                <th scope="col" class="w-25">Comments</th>
                <th scope="col">Reaction</th>
                <th scope="col">Time</th>
                <th scope="col">Score</th>
              </tr>
            </thead>
            <tbody>
              <% posts.forEach(function(item,index) { %>
              <tr>
                <th scope="row"><%= (index+1) %></th>
                <td><%= item._source.text %></td>
                <td><%= item._source.comments_full %></td>
                <th><%= item._source.reaction_count %></th>
                <th><%= item._source.time %></th>
                <th><%= item._score %></th>
              </tr>
              <% }); %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </body>
